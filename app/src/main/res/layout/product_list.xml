<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txtItemNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:text="#"
        android:textAlignment="viewStart"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/txtItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:inputType="textMultiLine"
        android:text="ITEM"
        android:textAlignment="viewStart"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/txtItemNumber"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/txtCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="CV"
        android:textAlignment="center"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtPrice"
        app:layout_constraintTop_toBottomOf="@+id/txtItem"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="PRICE"
        android:textAlignment="center"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/textView28"
        app:layout_constraintRight_toRightOf="@+id/textView28"
        app:layout_constraintTop_toBottomOf="@+id/txtCV"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtQty"
        app:layout_constraintLeft_toRightOf="@+id/textView27"
        app:layout_constraintTop_toTopOf="@+id/txtQty"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txtQty"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtPrice"
        app:layout_constraintRight_toLeftOf="@+id/textView27"
        app:layout_constraintTop_toBottomOf="@+id/txtPrice"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="CV : "
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtItem"
        app:layout_constraintRight_toLeftOf="@+id/txtItem"
        app:layout_constraintTop_toBottomOf="@+id/txtItemNumber"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="PRICE : "
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMOUNT : "
        android:textSize="13dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtAmount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="QUANTITY : "
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>